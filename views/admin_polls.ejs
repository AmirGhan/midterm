<!DOCTYPE html>
<html>

<head>
  <title>/admins/:id/polls</title>
  <link href="https://fonts.googleapis.com/css?family=Old+Standard+TT:400,700" rel="stylesheet">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/admin.css" type="text/css" />

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script type="text/javascript" src="/scripts/charts.js"></script>
  <script type="text/javascript" src="/scripts/admin_polls.js"></script>
  <!-- FIND NEW jQuery UI CDN. This one isn't official, but it works, while the official isn't working for me -->
</head>

<body>
  <% include partials/_header.ejs %>
    <div class="container">
      <a id="new" href="./polls/new">Create New Poll</a>
      <div class="row">
        <div class="col">
          <div class="body forImg">
            <div class="jumbotron">
              <h3 class="display-3">ACTIVE POLLS</h3>
              <!-- <div class="container"> -->
                <div class="col">
                  <div class="row">
                    <section id="adm-poll-template active">
                      <% polls.forEach(function(a) { %>
                        <% if(a.status){ %>
                          <article id="url" name="/admins/<%=adminId%>/polls/<%=a.id%>">
                            <button class="poll-button btn btn-outline-secondary">
                              <%=a.pollName%>
                            </button>
                            <a class="userlink" href="${a.link}">USER LINK</a>
                            <a href="#" id="end-poll" class="endPoll-url" name="/admins/<%=adminId%>/polls/<%=a.id%>">END POLL</a>
                          </article>
                          <% } %>
                            <% }) %>
                              <hr class="my-4">
                    </section>
                  </div>
                  <div class="row">
                    <div class="trial" id="piechartActive"></div>
                  </div>
                </div>
              <!-- </div> -->
            </div>
          </div>
        </div>
        <div class="col">
          <div class="forImg high">
            <div class="jumbotron">
              <h3 class="display-3">COMPLETED POLLS</h3>
              <!-- <div class="container"> -->
                <div class="col">
                  <div class="row">
                    <section id="adm-poll-template completed">
                      <% polls.forEach(function(a) { %>
                        <% if(!a.status){ %>
                          <article id="urlClosed" name="/admins/<%=adminId%>/polls/<%=a.id%>">
                            <button class="poll-button-closed"><%=a.pollName%></button>
                          </article>
                          <% } %>
                            <% }) %>
                              <hr class="my-4">
                    </section>
                  </div>
                  <div class="row">
                    <div id="piechartClosed" class="trial"></div>
                  </div>

                </div>
              <!-- </div> -->
            </div>
          </div>
        </div>
      </div>
    </div>

    <% include partials/_footer.ejs %>
      <script type="text/javascript" src="/scripts/admin_polls.js"></script>
</body>

</html>
